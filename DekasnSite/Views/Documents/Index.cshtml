@model IEnumerable<DekasnSite.Models.Document>

@{
    ViewBag.Title = "Documents";
}

<h2>Documents</h2>

<p class="button">
    @Html.ActionLink("Create New", "Create")
</p>
<p class="button">
    @Html.ActionLink("Export to Excel", "ExportToExcel", null, new { })
</p>
<p class="button">
    @Html.ActionLink("Export to Word", "ExportToWord", null, new { })
</p>
@using (Html.BeginForm())
{<p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("DocumentType", "Index", new { sortOrder = ViewBag.DocumentTypeParm })
        </th>
        <th>
            @Html.ActionLink("CreationDate", "Index", new { sortOrder = ViewBag.CreationDateParm })
        </th>
        <th>
            @Html.ActionLink("Description", "Index", new { sortOrder = ViewBag.DescriptionParm })
        </th>
        <th>
            @Html.ActionLink("StudentName", "Index", new { sortOrder = ViewBag.StudentName })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_Document }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_Document }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_Document })
            </td>
        </tr>
    }

</table>
<div>
    <p>Количество строк: @Model.Count()</p>
</div>